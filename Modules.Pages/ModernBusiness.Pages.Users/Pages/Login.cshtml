@page 
@model LoginModel
@{
}

<div class="row">
    <div class="col-md-8">
        
        <form asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal">
            <h4>@T["Account"]</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="LoginVM.Name" class="col-md-3 control-label">@T["Username"]</label>
                <div class="col-md-9">
                    <input asp-for="LoginVM.Name" class="form-control" autofocus />
                    <span asp-validation-for="LoginVM.Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="LoginVM.Password" class="col-md-3 control-label">@T["Password"]</label>
                <div class="col-md-9">
                    <input asp-for="LoginVM.Password" class="form-control" />
                    <span asp-validation-for="LoginVM.Password" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <div class="checkbox">
                        <label asp-for="LoginVM.RememberMe">
                            <input asp-for="LoginVM.RememberMe" />
                            @T["Remember me"]
                        </label>
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-3 col-md-9">
                    <button type="submit" class="btn btn-default">@T["Log in"]</button>
                </div>
            </div>
            @*@if (userCanRegister)
        {
            <p>
                <a asp-controller="Registration" asp-action="Register" asp-route-returnurl="@ViewData["ReturnUrl"]">@T["Register as a new user"]</a>
            </p>
        }*@
            @if (Model.allowResetPassword)
            {
                <p>
                    <a asp-controller="ResetPassword" asp-action="ForgotPassword">@T["Forgot your password?"]</a>
                </p>
            }
        </form>
    </div>
</div>