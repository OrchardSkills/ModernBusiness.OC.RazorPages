@model dynamic

@foreach (var post in Model.CurrentItemsOnPage)
{
    var blogLink = $"blog1/{post.DisplayText}";
    <div class="card mb-4">
        <img class="card-img-top" asset-src="@((string)post.Content.BlogPost.Image.Paths[0])" img-width="600" img-height="240" img-resize-mode="Crop"  alt="Card image cap" />
        <div class="card-body">
            <h2 class="card-title">@post.Content.TitlePart.Title</h2>
            <p class="card-text">@(await Orchard.MarkdownToHtmlAsync(((string)post.Content.MarkdownBodyPart.Markdown).Ellipsize(200)))</p>
            <a href="@blogLink" class="btn btn-primary">Read More</a>
        </div>
        <div class="card-footer text-muted">
            Posted on @post.PublishedUtc by @post.Author
        </div>
    </div>
}
