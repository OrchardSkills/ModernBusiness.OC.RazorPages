@model dynamic

@foreach (var post in Model.CurrentItemsOnPage)
{
    var blogLink = $"blog2/{post.DisplayText}";
    <div class="card mb-4">
        <div class="card-body">
            <div class="row">
                <div class="col-lg-6">
                    <a href="@blogLink">
                        <img class="img-fluid rounded" asset-src="@((string)post.Content.BlogPost.Image.Paths[0])" img-width="600" img-height="240" img-resize-mode="Crop" alt="" />
                    </a>
                </div>
                <div class="col-lg-6">
                    <h2 class="card-title">@post.Content.TitlePart.Title</h2>
                    <p class="card-text">@Html.Raw(((string)post.Content.HtmlBodyPart.Html).Ellipsize(200))</p>
                    <a href="@blogLink" class="btn btn-primary">Read More &rarr;</a>
                </div>
            </div>
        </div>
        <div class="card-footer text-muted">
            Posted on @post.PublishedUtc by @post.Author
        </div>
    </div>
}
