@model dynamic

<div class="row">

    <!-- Post Content Column -->
    <div class="col-lg-8">
        
        <!-- Preview Image -->
        <img class="img-fluid rounded" asset-src="@Model.Content.BlogPost.Image.Paths[0]" img-width="1024" img-height="240" img-resize-mode="Crop" alt=""/>

        <hr>

        <!-- Date/Time -->
        <p>Posted on @Model.PublishedUtc</p>
        
        <hr>

        <!-- Post Content -->
        <div>
            @await Orchard.MarkdownToHtmlAsync((string)Model.Content.MarkdownBodyPart.Markdown)
        </div>
        
        <hr>
    </div>
    <div class="col-md-4">

        <!-- Search Widget -->
        <div class="card mb-4">
            <h5 class="card-header">Search</h5>
            <div class="card-body">
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Search for...">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="button">Go!</button>
                    </span>
                </div>
            </div>
        </div>

        <partial name="/Areas/ModernBusiness.Pages.Shared/Pages/Shared/Categories.cshtml" />


        <!-- Side Widget -->
        <div class="card my-4">
            <h5 class="card-header">Side Widget</h5>
            <div class="card-body">
                You can put anything you want inside of these side widgets. They are easy to use, and feature the new Bootstrap 4 card containers!
            </div>
        </div>

    </div>
</div>